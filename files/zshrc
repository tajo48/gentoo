    PATH="$HOME/.local/bin:$PATH"
fi

source /home/tajo48/.cache/wal/colors.sh

function git_branch_name()
{
    branch=$(git symbolic-ref HEAD 2> /dev/null | awk 'BEGIN{FS="/"} {print $NF}')
    if [[ $branch == "" ]];
    then
        :
    else
        #echo '('$branch')'
        echo "%F{$foreground}[%F{$color4}$branch%F{$foreground}]─"
    fi
}



PROMPT='%B%F{$foreground}╒═[%F{$color1}%*%F{$foreground}]─$(git_branch_name)[%F{$color2}%n@%M%F{$foreground}]─[%F{$color5}%/%F{$foreground}]
╘═%F{$color6}$ '

